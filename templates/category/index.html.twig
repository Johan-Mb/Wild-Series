{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les séries : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / Catégorie : {{ category.name }}</h2>

            <a href="{{ path("category_show", { CategoryName: category.name }) }}">Voir les séries de la catégorie {{ category.name }}</a>

        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}