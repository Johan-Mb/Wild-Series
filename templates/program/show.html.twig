{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}

<div id="content" class="content">

    <div class="content-page">

        <div class="media">
            <img class="image-showProgram" src="{{program.poster}}" alt="{{ program.title }} poster">
        </div>

        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
                <p>Catégorie : {{ program.category.name }}</p>
                    <p>{{ program.summary }}</p>

                    {% for season in program.seasons %}
                    <li>
                        <a href="{{ path("program_showSeason", { id: program.id, season_id: season.id }) }}">{{ season.description }}</a>
                    </li>
                    {% endfor %}


            {# <button><a href="{{ path('program_edit', {id: program.id}) }}">Modifier la série</a>
            </button> #}

            <button><a href="{{ path('program_index') }}">
                Retour à la liste des séries
            </a></button>
        </div>

    </div>
</div>
{% endblock %}