{% extends "base.html.twig" %}

{% block body %}

    <div class="title-pages">
        <h1>Bienvenue</h1>
    </div>

    {% if is_granted("ROLE_CONTRIBUTOR") %}
        <div class="content-category-series">
            <a class="btn-home" href="{{ path('program_new')}}">Ajouter une série</a>
            <a class="btn-home" href="{{ path('season_index')}}">Gérer les saisons</a>
            <a class="btn-home" href="{{ path('episode_index')}}">Gérer les épisodes</a>
        </div>
    {% endif %}

            <div class="content-category-series">

                {% for program in programs | reverse %}

                    <div id="category-series">

                        <a href="{{ path("program_show", { slug: program.slug }) }}"><img id="category-series-img" src="{{ program.poster }}"></a>

                        <h2 class="title-serie"> {{ program.title }}</h2>
                        <p class="category-serie">{{ program.category.name }}</p>

                            <a href="{{ path("program_show", { slug: program.slug }) }}"><p class="btn-lire">Voir la fiche</p></a>

                    </div>

                {% else %}
                    Aucune série trouvée.
                {% endfor %}

            </div>

{% endblock %}